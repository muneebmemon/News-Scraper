<% include partials/header.ejs %>

<body>
<div class="jumbotron">
    <div class='header'>
    <h1 class="display-4">Chicago Tribune News Scraper</h1>
    <p class="lead">Welcome to the most amazing News Scraper website ever made :)</p>
    <p>Get the latest news articles from Chicago Tribune right here.</p>
    </div>
</div>

<% for (let i=0 ; i < data.length ; i++) { %>
    <div class='articles'>
        <button type="button" class="btn btn-success">Save Article!</button>
        <a href='http://www.chicagotribune.com<%=data[i].url %>' target='_blank'><h3><%=data[i].headline %></h3></a>
        <p><%=data[i].summary %></p>
    </div>
<% } %>
</body>
</html>